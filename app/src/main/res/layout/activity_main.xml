<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/display"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/key_clear" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/key_7" app:layout_constraintHorizontal_weight="3"
            app:layout_constraintVertical_weight="1" android:textSize="30sp" android:textAlignment="textEnd"
            android:gravity="center_vertical"/>
    <Button
            android:text="C"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/key_clear" app:layout_constraintStart_toEndOf="@+id/display"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/display" app:layout_constraintBottom_toBottomOf="@+id/display"
            app:layout_constraintHorizontal_weight="1" android:textSize="30sp"
            android:background="@drawable/bg_operation_button"/>
    <Button
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/key_7" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/key_8"
            app:layout_constraintTop_toBottomOf="@+id/display" app:layout_constraintBottom_toTopOf="@+id/key_4"
            app:layout_constraintHorizontal_weight="1" app:layout_constraintVertical_weight="1"
            android:textSize="@dimen/font_size_button" android:background="@drawable/bg_digit_button"/>
    <Button
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/key_8"
            app:layout_constraintStart_toEndOf="@+id/key_7" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/key_9"
            app:layout_constraintTop_toTopOf="@+id/key_7" app:layout_constraintBottom_toBottomOf="@+id/key_7"
            app:layout_constraintHorizontal_weight="1" android:textSize="@dimen/font_size_button"
            android:background="@drawable/bg_digit_button"/>
    <Button
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/key_9"
            app:layout_constraintStart_toEndOf="@+id/key_8" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/key_addition"
            app:layout_constraintTop_toTopOf="@+id/key_8" app:layout_constraintBottom_toBottomOf="@+id/key_8"
            app:layout_constraintHorizontal_weight="1" android:textSize="@dimen/font_size_button"
            android:background="@drawable/bg_digit_button"/>
    <Button
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/key_addition"
            app:layout_constraintStart_toEndOf="@+id/key_9" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/key_9" app:layout_constraintBottom_toBottomOf="@+id/key_9"
            app:layout_constraintHorizontal_weight="1" android:textSize="30sp"
            android:background="@drawable/bg_operation_button"/>
    <Button
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/key_4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/key_5"
            app:layout_constraintTop_toBottomOf="@+id/key_7" app:layout_constraintBottom_toTopOf="@+id/key_1"
            app:layout_constraintHorizontal_weight="1" app:layout_constraintVertical_weight="1"
            android:textSize="@dimen/font_size_button" android:background="@drawable/bg_digit_button"/>
    <Button
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/key_5"
            app:layout_constraintStart_toEndOf="@+id/key_4" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/key_6"
            app:layout_constraintTop_toTopOf="@+id/key_4" app:layout_constraintBottom_toBottomOf="@+id/key_4"
            app:layout_constraintHorizontal_weight="1" android:textSize="@dimen/font_size_button"
            android:background="@drawable/bg_digit_button"/>
    <Button
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/key_6"
            app:layout_constraintStart_toEndOf="@+id/key_5" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/key_substraction" app:layout_constraintTop_toTopOf="@+id/key_5"
            app:layout_constraintBottom_toBottomOf="@+id/key_5" app:layout_constraintHorizontal_weight="1"
            android:textSize="@dimen/font_size_button" android:background="@drawable/bg_digit_button"/>
    <Button
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/key_substraction" app:layout_constraintStart_toEndOf="@+id/key_6"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/key_6" app:layout_constraintBottom_toBottomOf="@+id/key_6"
            app:layout_constraintHorizontal_weight="1" android:textSize="30sp"
            android:background="@drawable/bg_operation_button"/>
    <Button
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/key_1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/key_2" app:layout_constraintTop_toBottomOf="@+id/key_4"
            app:layout_constraintBottom_toTopOf="@+id/key_0" app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="1" android:textSize="@dimen/font_size_button"
            android:background="@drawable/bg_digit_button"/>
    <Button
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/key_2"
            app:layout_constraintStart_toEndOf="@+id/key_1" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/key_3"
            app:layout_constraintTop_toTopOf="@+id/key_1" app:layout_constraintBottom_toBottomOf="@+id/key_1"
            app:layout_constraintHorizontal_weight="1" android:textSize="@dimen/font_size_button"
            android:background="@drawable/bg_digit_button"/>
    <Button
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/key_3"
            app:layout_constraintStart_toEndOf="@+id/key_2" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/key_multiplication"
            app:layout_constraintTop_toTopOf="@+id/key_2" app:layout_constraintBottom_toBottomOf="@+id/key_2"
            app:layout_constraintHorizontal_weight="1" android:textSize="@dimen/font_size_button"
            android:background="@drawable/bg_digit_button"/>
    <Button
            android:text="*"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/key_multiplication" app:layout_constraintStart_toEndOf="@+id/key_3"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/key_3" app:layout_constraintBottom_toBottomOf="@+id/key_3"
            app:layout_constraintHorizontal_weight="1" android:textSize="30sp"
            android:background="@drawable/bg_operation_button"/>
    <Button
            android:text="/"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/key_division" app:layout_constraintStart_toEndOf="@+id/key_equals"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/key_equals" app:layout_constraintBottom_toBottomOf="@+id/key_equals"
            app:layout_constraintHorizontal_weight="1" android:textSize="30sp"
            android:background="@drawable/bg_operation_button"/>
    <Button
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/key_0"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/key_equals" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/key_1" app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="1" android:textSize="30sp"
            android:background="@drawable/bg_digit_button"/>
    <Button
            android:text="="
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/key_equals"
            app:layout_constraintStart_toEndOf="@+id/key_0" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/key_division"
            app:layout_constraintTop_toTopOf="@+id/key_0" app:layout_constraintBottom_toBottomOf="@+id/key_0"
            app:layout_constraintHorizontal_weight="2" android:textSize="30sp"
            android:background="@drawable/bg_operation_button"/>
</android.support.constraint.ConstraintLayout>